{
  "extends": "@flutter-dom/tsconfig/monorepo",
  "compilerOptions": {
    // for tsconfig-paths-webpack-plugin resolve paths
    "baseUrl": "../../../packages",
    "paths": {
      "@flutter-dom/*": ["./core/*/src", "./scaffold/*/src", "./toolkit/*/src"]
    }
  },
  // for ts-node tsconfig-paths resolve paths
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["."],
  "exclude": ["node_modules"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "CLI"
}
